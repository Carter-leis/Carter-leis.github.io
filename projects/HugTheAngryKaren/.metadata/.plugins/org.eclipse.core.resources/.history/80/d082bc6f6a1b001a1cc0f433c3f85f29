import java.util.Random;

public class Jarvis extends Mobile{

	private int countForTrap;
	public Jarvis(Board board) {
		super(board);
		countForTrap = 0;
	}

	private void layTrap()
	{
		int col = board.getColumn(this);
		int row = board.getRow(this);
		Random rand = new Random();
		int changeRow = rand.nextInt(2);
		int changeCol = rand.nextInt(2);
		if(board.placeElement(new HomeworkTrap(board), row + changeRow, col + changeCol));
		if(board.placeElement(new HomeworkTrap(board), row - changeRow, col - changeCol));
		
	}
	
	protected void move()
	{
		countForTrap = countForTrap + 1;
		Random rand = new Random();
		int randChoice = rand.nextInt(8);
		if(randChoice == 0)
		{
			board.move(Direction.UP_LEFT, this);
		}if(randChoice == 1)
		{
			board.move(Direction.UP, this);
		}if(randChoice == 2)
		{
			board.move(Direction.UP_RIGHT, this);
		}if(randChoice == 3)
		{
			board.move(Direction.LEFT, this);
		}if(randChoice == 4)
		{
			board.move(Direction.RIGHT, this);
		}if(randChoice == 5)
		{
			board.move(Direction.DOWN_LEFT, this);
		}if(randChoice == 6)
		{
			board.move(Direction.DOWN, this);
		}if(randChoice == 7)
		{
			board.move(Direction.DOWN_RIGHT, this);
		}
		if(countForTrap == 6)
		{
			layTrap();
			countForTrap = 0;
		}
	}
	
	public void run()
	{
		
	}
	
	@Override
	public boolean share(Boardable elem) 
	{
		if(elem instanceof Player)
		{
			
			return false;
		}
		return true;

	}

	@Override
	public boolean isVisible() {
		// TODO Auto-generated method stub
		return false;
	}

}
