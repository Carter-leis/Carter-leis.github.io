
public class HomeworkTrap implements Boardable{

	private Board board;
	
	public HomeworkTrap(Board board)
	{
		this.board = board;
	}
	
	@Override
	public boolean isVisible() {
		
		return false;
	}

	@Override
	public boolean share(Boardable elem) {
		if(elem instanceof Player)
		{
			((Player) elem).setDelay(5);
			return true;
		}
		return false;
	}

}
